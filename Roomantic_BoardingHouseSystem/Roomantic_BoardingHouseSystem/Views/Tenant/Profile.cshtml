@{
    ViewData["Title"] = "My Profile";
    ViewData["Active"] = "Profile";
    Layout = "~/Views/Shared/_TenantLayout.cshtml";   // ✔ Added (same style as Admin)
}

<section>
    <h2><i class="bi bi-person"></i> My Profile</h2>

    <form asp-action="UpdateProfile" method="post">

        <div class="form-row">
            <div>
                <label>Full Name</label>
                <input type="text" name="FullName" value="@Model.FullName" class="form-input" />
            </div>

            <div>
                <label>Gender</label>
                <select name="Gender" class="form-input">
                    <option selected>@Model.Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div>
                <label>Age</label>
                <input type="number" name="Age" value="@Model.Age" class="form-input" />
            </div>
        </div>

        <div>
            <label>Address</label>
            <input type="text" name="Address" value="@Model.Address" class="form-input" />
        </div>

        <div class="form-row">
            <div>
                <label>Contact No.</label>
                <input type="text" name="ContactNumber" value="@Model.ContactNumber" class="form-input" />
            </div>

            <div>
                <label>Status</label>
                <p>@Model.Status</p>
            </div>
        </div>

        <button class="btn-primary">Save Changes</button>

    </form>
</section>
