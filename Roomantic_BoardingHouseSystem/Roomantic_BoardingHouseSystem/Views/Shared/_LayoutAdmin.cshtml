<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Roomantic Boarding House System</title>

    <!-- Bootstrap CSS (required for spacing + grid + responsive) -->
    <link rel="stylesheet" 
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" 
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Your Admin CSS (load AFTER Bootstrap) -->
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />
</head>

<body>

    <div class="layout-container">   <!-- FIXED -->

        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-toggle" aria-label="Toggle mobile menu" aria-expanded="false">
            <i class="bi bi-list"></i>
        </button>

        <!-- Overlay for Mobile Menu -->
        <div class="overlay" id="overlay"></div>

        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <i class="bi-building"></i>
                <h3>Admin</h3>
            </div>

            <div class="sidebar-menu">
                <ul>
                    <li><a asp-controller="Admin" asp-action="Index"><i class="bi bi-pie-chart"></i> <span>Dashboard</span></a></li>
                    <li><a asp-controller="Admin" asp-action="RoomManagement"><i class="bi bi-door-closed"></i> <span>Room Module</span></a></li>
                    <li><a asp-controller="Admin" asp-action="TenantRegistration"><i class="bi bi-people"></i> <span>Tenant Registration</span></a></li>
                    <li><a asp-controller="Admin" asp-action="PaymentProcessing"><i class="bi bi-cash-coin"></i> <span>Payment Processing</span></a></li>
                    <li><a asp-controller="Admin" asp-action="RequestHandling"><i class="bi bi-headset"></i> <span>Request Handling</span></a></li>
                    <li><a asp-controller="Admin" asp-action="ReportsMonitoring"><i class="bi bi-graph-up"></i> <span>Reports & Monitoring</span></a></li>
                    <li><a asp-controller="Admin" asp-action="AdminManagement"><i class="bi bi-gear"></i> <span>Admin Module</span></a></li>
                    <li><a asp-controller="Auth" asp-action="Logout"><i class="bi bi-power"></i> <span>Logout</span></a></li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">

            <div class="header">
                <h1 id="page-title">@ViewData["Title"]</h1>
                <div class="user-info">
                    <div class="user-avatar"><i class="bi bi-person-circle"></i></div>
                    <div>
                        <div id="user-name">@User.Identity?.Name</div>
                        <div id="user-role">Administrator</div>
                    </div>
                </div>
            </div>

            @RenderBody()
        </div>
    </div>

    <!-- JS -->
    <script src="~/js/adminfunct.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
